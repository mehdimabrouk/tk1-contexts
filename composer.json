{
    "name": "rezzza/tk1-contexts",
    "description": "Behatch contexts",
    "keywords": ["BDD", "Behat", "Symfony2", "Context"],
    "type": "behat-extension",
    "license": "MIT",
    "homepage": "https://github.com/rezzza/tk1-contexts",

    "require": {
        "php": ">=5.3.2"
    },

    "require-dev": {
        "behat/behat": "~3.0",
        "behat/symfony2-extension": "~2.0",
        "symfony/symfony": "~2.3",
        "atoum/atoum": "*",
        "behatch/contexts": "~2.1",
        "guzzle/guzzle" : "~3.9, < 4.0"
    },

    "suggest": {
        "rezzza/time-traveler" : "To use the time traveler context.",
        "guzzle/guzzle" : "To use the benchmark context.",
        "behat/behat": "To use json, benchmark & command contexts.",
        "behat/symfony2-extension": "To use command context",
        "symfony/symfony": "To use command & time traveler contexts",
        "atoum/atoum": "To use benchmark, command & json contexts",
        "behatch/contexts": "To use json context"
    },

    "autoload": {
        "psr-4": { "Rezzza\\Tk1\\": "src/" }
    },

    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },

    "config": {
        "bin-dir": "bin"
    }
}
